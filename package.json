{
  "name": "web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "serve:ssr:web": "node dist/web/server/server.mjs",
    "prepare": "husky",
    "lint": "ng lint",
    "predocker:dev": "rm -f .env.docker && cat .env* > .env.docker",
    "docker:dev": "docker compose --env-file ./.env.docker -f ./docker-compose.development.yml -p web --profile all watch --prune",
    "docker:dev:down": "docker stop $(docker ps -a -q --filter \"label=com.docker.compose.project=web\") && docker system prune -a --filter \"label=com.docker.compose.project=web\" -f && rm -f .env.docker",
    "storybook": "ng run web:storybook",
    "build-storybook": "ng run web:build-storybook",
    "test:watch": "test-storybook --url http://localhost:6006/ --watch",
    "test": "test-storybook --url http://localhost:6006/"
  },
  "lint-staged": {
    "**/*.{ts,html,css}": [
      "bash -c 'pnpm run lint'",
      "bash -c 'pnpm run test'"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.4",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.4",
    "@angular-eslint/builder": "20.3.0",
    "@angular/build": "^20.3.4",
    "@angular/cli": "^20.3.4",
    "@angular/compiler-cli": "^20.3.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.35.0",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/angular": "^9.1.10",
    "@storybook/test-runner": "^0.23.0",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "angular-eslint": "20.3.0",
    "eslint": "^9.35.0",
    "eslint-plugin-storybook": "^9.1.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "storybook": "^9.1.10",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
